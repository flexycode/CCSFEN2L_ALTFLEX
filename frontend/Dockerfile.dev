# AltFlex Frontend Development Dockerfile
# Next.js 16 with hot-reload support

FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy source files
COPY . .

# Expose development port
EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Run development server with hot-reload
CMD ["npm", "run", "dev"]
